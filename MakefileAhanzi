# Compiles libft with its Makefile 
# Then compiles all sources needed for printf

NAME = libftprintf.a

CC = cc
CCFLAGS = -Wall -Werror -Wextra
ARFLAGS = -rcs

NLFT = libft.a
DLFT = libft

SRC = ft_print_char.c\
	   ft_print_hex.c\
	   ft_print_percent.c\
	   ft_print_ptr.c\
	   ft_print_str.c\
	   ft_print_uns.c\
	   ft_printf.c\
	   ft_uitoa.c\
	   ft_print_nbr.c\

# BSRC = 

OBJ = $(SRC:%.c=%.o)
BOBJ = $(BSRC:%.c=%.o)

RM = rm -f

all: $(NAME)

makelibft:
	make -C $(DLFT)
	cp $(DLFT)/$(NLFT) .
	mv $(NLFT) $(NAME)

$(NAME): makelibft $(OBJ)
	ar $(ARFLAGS) $(NAME) $(OBJ)

%.o: %.c
	$(CC) $(CFLAGS) -c $^ -o $@
	
#compile: all
#	$(CC) $(CCFLAGS) $(NAME) $(OBJ) main.c -g && ./a.out

#bonus: $(NAME) $(OBJ) $(BOBJ)
#	ar $(ARFLAGS) $(NAME) $(OBJ)

clean:
	$(RM) $(OBJ)
	make clean -C $(DLFT)

fclean: clean
	$(RM) $(NAME)
	make fclean -C $(DLFT)

re: fclean all

.PHONY: all makelibft compile bonus clean fclean re
